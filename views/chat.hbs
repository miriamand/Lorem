{{#if session}}
    {{>navActivo}}
{{else}}
    {{>navbar}}
{{/if}}
    
{{>areaP}}

<div class="container mt-4 chat">
    <div class="card mx-auto" style="max-width:60vw">
        <div class="card-header bg-transparent">
            <div class="navbar navbar-expand p-0">
                <ul class="navbar-nav me-auto align-items-center">
                    <li class="nav-item">
                        <a class="nav-link">
                            <div class="position-relative"
                                style="width:50px; height: 50px; border-radius: 50%; padding: 2px">
                                <img src="../images/loremsio.png"
                                    class="img-fluid rounded-circle" alt="">
                            </div>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link">Loremsio</a>
                    </li>
                </ul>
            </div>
        </div>
        <div class="card-body p-4 chatX" style="height: 400px; overflow: auto;">

            <div class="d-flex align-items-baseline mb-4">
                <div class="position-relative avatar">
                    <img src="../images/loremsio.png"
                        class="img-fluid rounded-circle" alt="">
                </div>
                <div class="pe-2">
                    <div>
                        <div class="card card-text d-inline-block p-2 px-3 m-1">
                            ¡Hola {{session.nomUser}}! ¿En qué puedo ayudarte?
                        </div>
                    </div>
                </div>
            </div>

            <div class="d-flex align-items-baseline text-end justify-content-end mb-4">
                <div class="pe-2"></div>
            </div>

        </div>
        <div class="card-footer bg-white position-absolute w-100 bottom-0 m-0 p-1">
            <div class="input-group">
                <input type="text" class="form-control border-0" placeholder="Escriba su mensaje...">
            </div>
        </div>
    </div>
</div>
<br>

{{>footer}}