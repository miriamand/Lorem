<form action="/login/entrar" method="post">
  <fieldset>
    <center>
        <legend style="color: black;">Inicio de Sesión</legend>
    </center>
    <br><br>
    <div class="fGridLogin">
        {{!-- ICONO EMAIL --}}
        <div class="gridA3">
            <div class="icon-cont"><ion-icon name="mail"></ion-icon></div>
        </div>
        {{!-- EMAIL LOGIN --}}
        <div class="form-group gridB3">
            <input type="text" class="form-control" placeholder="E-mail" name="username">
        </div>
        {{!-- ICONO CONTRASEÑA --}}
        <div class="gridC3">
            <div class="icon-cont"><ion-icon name="lock-closed"></ion-icon></div>
        </div>
        {{!-- CONTRASEÑA LOGIN--}}
        <div class="form-group gridD3">
            <input type="password" class="form-control" placeholder="Contraseña" name="password">
        </div>
    </div>
    <br>
    <center>
        <button type="submit" class="buttonAP">
            <span>Entrar</span>
        </button>
    </center>
  </fieldset>
</form>

<br>
    <div class="separacion"></div>
